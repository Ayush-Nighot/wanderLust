<% layout('/layouts/boilerPlate') %>
<body>
    <h3>Create a new listing</h3>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="row mt-3">
        <div class="col-8 offset-2">
        <div class="mb-3">
        <label for="title" class="form-label">Enter Title</label>
        <input type="text" name="listing[title]" class="form-control" value="<%=listing.title %>" required> 
        <div class="valid-feedback">
            Title Looks good
        </div>
        <div class="invalid-feedback">
            Title is Required
        </div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Enter Description</label>
        <textarea type="text" name="listing[description]" class="form-control" value="<%=listing.description %>" required><%=listing.description %></textarea> 
        <div class="valid-feedback">
            Description Looks good
        </div>
        <div class="invalid-feedback">
            Description is Required
        </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Enter Image URL</label>
            <input type="text" name="listing[image]" class="form-control" value=<%=listing.image%> required>
            <div class="valid-feedback">
                ImageLink/URL Looks good
            </div>
            <div class="invalid-feedback">
                ImageLink/URL is Required
            </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Enter Price</label>
            <input class="form-control" name="listing[price]" type="number" value=<%=listing.price%> required>
            <div class="valid-feedback">
                Price Looks good
            </div>
            <div class="invalid-feedback">
                Enter Valid Price
            </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter Country</label>
            <input class="form-control" name="listing[country]" type="text" value=<%=listing.country%> required>
            <div class="valid-feedback">
                Country Looks good
            </div>
            <div class="invalid-feedback">
                Country Should be valid
            </div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Enter Location</label>
            <input name="listing[location]" class="form-control" type="text" value=<%=listing.location%> required>
            <div class="valid-feedback">
                Location Looks good
            </div>
            <div class="invalid-feedback">
                Location Should be valid
            </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Update</button>
    </div>
    </div>
    </form>   
</body>
