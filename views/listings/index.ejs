<% layout('/layouts/boilerPlate') %>
<body>
    <h3>All Listings</h3>
    <!-- <form action="/listings/new" method="get">
        <button>Create new Listing</button>
    </form> -->
    <div class="edit row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let list of allListings){ %>
            <a href="/listings/<%=list._id%>" class="listing-link">
              <div class="card col car" style="width: 25rem;">
                <img src="<%=list.image%>" class="card-img-top" alt="Listing_Image" style="height: 20rem;">
                <div style="color: black;" class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text" style="color: black;">
                   <b> <%=list.title%></b> <br>
                    &#8377; <%=list.price.toLocaleString("en-IN")%>/night            
                </p>
                </div>
              </div>
            </a>
            <% } %>  
    </div> 
</body>
